    },
    "servers": [],
    "components": {
        "schemas": {
            "Task": {
                "description": "A Task Type",
                "required": [
                    "id",
                    "title",
                    "status"
                ],
                "type": "object",
                "properties": {
                    "id": {
                        "description": "Unique ID of the task",
                        "type": "string"
                    },
                    "title": {
                        "description": "Title of the task",
                        "type": "string"
                    },
                    "description": {
                        "description": "Description of the task",
                        "type": "string"
                    },
                    "status": {
                        "description": "Status of the task (todo|in-progress|completed)",
                        "type": "string"
                    },
                    "priority": {
                        "description": "Priority of the task (low|medium|high)",
                        "type": "string"
                    },
                    "tags": {
                        "description": "Tags associated with the task",
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "dueDate": {
                        "description": "Due date and time for the task",
                        "type": "string"
                    }
                }
            },
            "Meta": {
                "description": "A Meta type",
                "type": "object",
                "properties": {
                    "totalCount": {
                        "description": "Total count of items (optional, for paginated responses)",
                        "type": "number"
                    },
                    "page": {
                        "description": "Current page (optional, for paginated responses)",
                        "type": "number"
                    },
                    "totalPages": {
                        "description": "Total number of pages (optional, for paginated responses)",
                        "type": "number"
                    }
                }
            },
            "ApiResponseTasks": {
                "description": "An ApiResponse Multiple Task Type",
                "required": [
                    "message"
                ],
                "type": "object",
                "properties": {
                    "message": {
                        "description": "A message describing the outcome of the operation",
                        "type": "string"
                    },
                    "data": {
                        "description": "The data returned by the API (could be an array or object depending on the route)",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Task"
                        }
                    },
                    "meta": {
                        "description": "Metadata for pagination (optional)",
                        "$ref": "#/components/schemas/Meta"
                    }
                }
            },
            "ApiResponseTask": {
                "description": "A Single Task Type",
                "required": [
                    "message",
                    "data"
                ],
                "type": "object",
                "properties": {
                    "message": {
                        "description": "A message describing the outcome of the operation",
                        "type": "string"
                    },
                    "data": {
                        "description": "Single task details",
                        "$ref": "#/components/schemas/Task"
                    }
                }
            },
            "Failed": {
                "description": "A Failed Delete Type",
                "required": [
                    "id",
                    "error"
                ],
                "type": "object",
                "properties": {
                    "id": {
                        "description": "The ID of the task that failed to delete",
                        "type": "string"
                    },
                    "error": {
                        "description": "The error message",
                        "type": "string"
                    }
                }
            },
            "BulkDeleteResponse": {
                "description": "A BulkDeleteResponse Type",
                "type": "object",
                "properties": {
                    "deleted": {
                        "description": "List of successfully deleted task IDs",
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "failed": {
                        "description": "List of tasks that failed to delete with error message",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Failed"
                        }
                    }
                }
            },
            "ApiResponseBulkDelete": {
                "description": "",
                "required": [
                    "message",
                    "data"
                ],
                "type": "object",
                "properties": {
                    "message": {
                        "description": "A message describing the outcome of the operation",
                        "type": "string"
                    },
                    "data": {
                        "description": "Bulk delete response",
                        "$ref": "#/components/schemas/BulkDeleteResponse"
                    }
                }
            },
            "ApiResponseNotFound": {
                "description": "",
                "required": [
                    "message"
                ],
                "type": "object",
                "properties": {
                    "message": {
                        "description": "A message describing the outcome of the operation",
                        "type": "string"
                    }
                }
            },
            "ValidationError": {
                "description": "",
                "required": [
                    "message",
                    "path"
                ],
                "type": "object",
                "properties": {
                    "message": {
                        "description": "A message describing the validation error",
                        "type": "string"
                    },
                    "path": {
                        "description": "The path of the field that failed validation",
                        "type": "string"
                    }
                }
            },
            "ApiResponseValidationError": {
                "description": "",
                "required": [
                    "message",
                    "details"
                ],
                "type": "object",
                "properties": {
                    "message": {
                        "description": "A message describing the validation error",
                        "type": "string"
                    },
                    "details": {
                        "description": "List of validation errors",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/ValidationError"
                        }
                    }
                }
            }
        }
